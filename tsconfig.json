{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@general-infrastructure/*": ["./infrastructure/*"],
      "@client/*": ["./client/*"],
      "@server/*": ["./server/*"],
      "@api/*": ["./api/*"],
    }
  }
}
